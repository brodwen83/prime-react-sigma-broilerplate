{
  "name": "react-app-with-sigma",
  "version": "2.0.0-beta.2-SNAPSHOT",
  "homepage": "/sigma-react",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/primefaces/sigma.git"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^0.15.3",
    "babel-polyfill": "6.26.0",
    "chart.js": "2.7.3",
    "classnames": "^2.2.6",
    "flow-bin": "^0.93.0",
    "fullcalendar": "4.0.0-alpha.2",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "node-sass-chokidar": "^1.3.5",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.17.1",
    "primeflex": "1.0.0-rc.1",
    "primeicons": "1.0.0",
    "primereact": "3.0.0",
    "prop-types": "^15.7.2",
    "quill": "1.3.3",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^3.0.1",
    "react-transition-group": "^2.5.1"
  },
  "scripts": {
    "build-css": "node-sass-chokidar src/layout/ -o src/layout/ | node-sass-chokidar public/assets/layout/ -o public/assets/layout/",
    "watch-css": "npm run build-css && node-sass-chokidar src/layout/ -o src/layout/ --watch --recursive | node-sass-chokidar public/assets/layout/ -o public/assets/layout/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "precommit": "lint-staged",
    "flow": "flow"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "flow-typed": "^2.5.2"
  }
}
